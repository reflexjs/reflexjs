{
  "version": "independent",
  "packages": ["packages/*", "starters/*", "e2e-tests/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "success",
  "registry": "https://registry.npmjs.org/",
  "ignoreChanges": ["CHANGELOG.md", "**/__tests__/**", "**/__mocks__/**"],
  "command": {
    "create": {
      "license": "MIT"
    },
    "run": {
      "loglevel": "verbose"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
